#:kivy 1.9.0

# Top bar of the app
<TopRow>:
    size_hint: (1, 0.1)
    BoxLayout:
        id: top_box
        size: root.size
        pos: root.pos
        id: boxlayout_h
        orientation: 'horizontal'
        Label:
            text: "Ankit's Crawler Feed"
        Button:
            id: sync_button
            text: 'Sync'
            group: 'test'
            on_press: root.schedule_sync()
        Label:
            text: 'Last updated:'
            text_size: self.size
            halign: 'left'
            padding: 5, 18
<TableItem>:
    size_hint_y: None
    height: '30dp'
    width: '100dp'
    text_size: self.width, None
    height: self.texture_size[1]
    padding: 10, 10
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<TableHeader>:
    size_hint_y: None
    height: '30dp'
    width: '100dp'
    text_size: self.width, None
    height: self.texture_size[1]
    padding: 10, 10
    canvas.before:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
# Header for each source. Contains the source thumbnail, title, and last synced
<SourceHeader>:
    size_hint_y: None

# Box layout widget encompassing the header and article table
<SourceContainer>:
    height: self.minimum_height
    size_hint: (1, None)

# Article list for a given source
<ArticleTable>:
    cols: 2
    height:self.minimum_height
    size_hint: (1, None)            
    spacing: '1dp'

# Scroll View Widget for all the sources to sit in.
<ScrollContainer>:
    bar_color: [1, 1, 1, 1]
    SourceBoxes:
        id:src_boxes
        size_hint: 1, None
        height: self.minimum_height

# 
RootGrid:
    top_row: top_row
    bottom_row: bottom_row
    TopRow:
        id: top_row
    ScrollContainer:
        id: bottom_row